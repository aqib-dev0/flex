{
  "name": "flex-living-review-system",
  "version": "0.1.0",
  "private": true,
  "description": "Review management system for Flex Living",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "seed:reviews": "cd backend && npm run seed:reviews",
    "postinstall": "concurrently \"cd backend && npm install\" \"cd frontend && npm install\""
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
